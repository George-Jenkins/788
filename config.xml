<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="com.witzkey.witzkey" 
		version="1.0">

<name>WitzKey</name>

<description>
Find your career mentor
</description>
  
<!-- whitelist domains -->
<!--<access origin="http://WitzKey.com"/>-->

<gap:plugin name="com.magziiim.phonegap.plugins.pushplugin" version="2.4.0" />
<gap:plugin name="de.appplant.cordova.plugin.badge" version="0.6.0" /><!--this is for badges-->
<!--<gap:plugin name="org.apache.cordova.vibration" version="0.3.0" />alerts-->
<!--<gap:plugin name="it.witek.cordova.plugin.background-mode" version="0.6.3" />allow app to run in background-->
<gap:plugin name="org.apache.cordova.camera" version="0.3.2" /><!-- camera -->
<gap:plugin name="org.apache.cordova.file-transfer" version="0.4.6" /><!-- transer files -->
<gap:plugin name="org.apache.cordova.file" version="1.3.1" /><!-- needed to transer files -->


<!-- icons -->
<icon src="pics/app-icon.png"/>
<icon src="pics/iPhone-icons/icon-57.png" gap:platform="ios" width="57" height="57" />
<icon src="pics/iPhone-icons/icon-72.png" gap:platform="ios" width="72" height="72" />
<icon src="pics/iPhone-icons/icon-76.png" gap:platform="ios" width="76" height="76" />
<icon src="pics/iPhone-icons/icon-120.png" gap:platform="ios" width="120" height="120" />
<icon src="pics/iPhone-icons/icon-152.png" gap:platform="ios" width="152" height="152" />

<preference name="SplashScreen" value="screen"/>
<preference name="SplashScreenDelay" value="10000"/>

<feature name="http://api.phonegap.com/1.0/file"/>



<!-- splash screens -->
<gap:splash src="pics/splash.png" gap:platform="ios" width="320" height="480" />
<gap:splash src="pics/splash.png" gap:platform="ios" width="640" height="960" />
<gap:splash src="pics/splash.png" gap:platform="ios" width="640" height="1136" />
<gap:splash src="pics/splash.png" gap:platform="ios" width="768" height="1024" />
<gap:splash src="pics/splash.png" gap:platform="ios" width="1024" height="768" />
<gap:splash src="pics/splash.png" gap:platform="android" gap:qualifier="port-ldpi" />
<gap:splash src="pics/splash.png" gap:platform="android" gap:qualifier="port-mdpi" />
<gap:splash src="pics/splash.png" gap:platform="android" gap:qualifier="port-hdpi" />
<gap:splash src="pics/splash.png" gap:platform="android" gap:qualifier="port-xhdpi" />
<gap:splash src="pics/splash.png" gap:platform="winphone" />
<gap:splash src="pics/splash.png" gap:platform="blackberry" />

</widget>